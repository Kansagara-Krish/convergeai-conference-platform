# ============================================
# Conference Chatbot Management System
# Environment Configuration Template
# ============================================
# Copy this file to .env and update values for your environment

# ============================================
# Flask Configuration
# ============================================
# Environment: development, production, testing
FLASK_ENV=development

# Enable debug mode (NEVER enable in production)
FLASK_DEBUG=True

# Secret key for session management (generate a strong random string in production)
SECRET_KEY=supersecretkey-change-in-production

# ============================================
# Database Configuration
# ============================================
# SQLite (default for development)
DATABASE_URL=sqlite:///./chat_system.db

# MySQL example (uncomment to use)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/convergeai_chatbot

# PostgreSQL example (uncomment to use)
# DATABASE_URL=postgresql://username:password@localhost:5432/convergeai_chatbot

# ============================================
# JWT & Authentication
# ============================================
# Secret key for JWT tokens
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Token expiration time (in days)
JWT_EXPIRATION_DAYS=30

# ============================================
# File Upload Configuration
# ============================================
# Maximum upload file size in bytes (50MB default)
MAX_UPLOAD_SIZE=52428800

# Directory for storing uploaded files
UPLOAD_FOLDER=uploads

# Allowed file extensions (comma-separated)
ALLOWED_EXTENSIONS=xlsx,xls,pdf,jpg,jpeg,png,gif

# ============================================
# CORS Configuration
# ============================================
# Allowed origins for CORS (comma-separated)
# For development: *
# For production: specific domain(s)
CORS_ORIGINS=*

# ============================================
# Email Configuration (Optional)
# ============================================
# Email service provider: smtp, sendgrid, mailgun, aws_ses
EMAIL_PROVIDER=smtp

# SMTP Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@convergeai.com

# SendGrid Configuration (if using SendGrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Mailgun Configuration (if using Mailgun)
# MAILGUN_DOMAIN=mg.yourdomain.com
# MAILGUN_API_KEY=your-mailgun-api-key

# AWS SES Configuration (if using AWS)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# ============================================
# AI Service Configuration (Optional)
# ============================================
# AI provider: openai, claude, huggingface, local
AI_PROVIDER=openai

# OpenAI Configuration
# OPENAI_API_KEY=sk-your-api-key
# OPENAI_MODEL=gpt-3.5-turbo

# Anthropic Claude Configuration
# CLAUDE_API_KEY=sk-ant-your-api-key
# CLAUDE_MODEL=claude-2

# Hugging Face Configuration
# HUGGINGFACE_API_KEY=hf_your-api-key
# HUGGINGFACE_MODEL=meta-llama/Llama-2-7b-chat

# ============================================
# Logging Configuration
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE=logs/app.log

# ============================================
# Security Configuration
# ============================================
# Session cookie - set to True in production with HTTPS
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# HTTPS redirect
FORCE_HTTPS=False

# ============================================
# Rate Limiting (Optional)
# ============================================
# Enable rate limiting
RATE_LIMIT_ENABLED=False

# Rate limit: requests per hour
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=3600

# ============================================
# Redis Configuration (Optional - for caching)
# ============================================
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Analytics Configuration (Optional)
# ============================================
# Enable analytics
ANALYTICS_ENABLED=False

# Google Analytics ID
# GOOGLE_ANALYTICS_ID=UA-your-id

# ============================================
# Frontend Configuration
# ============================================
# Frontend base URL
FRONTEND_URL=http://localhost:8000

# API base URL
API_URL=http://localhost:5000/api

# ============================================
# Development/Testing Configuration
# ============================================
# Seed database with demo data on startup
SEED_DATABASE=True

# Enable API documentation (Swagger UI)
ENABLE_API_DOCS=True

# ============================================
# Production Configuration
# ============================================
# Set these when deploying to production

# Production environment check
# PRODUCTION=True

# Production database
# DATABASE_URL=your-production-database-url

# Production secret keys (generate strong random strings)
# SECRET_KEY=your-production-secret-key
# JWT_SECRET_KEY=your-production-jwt-secret

# Production email configuration
# SMTP_SERVER=your-production-smtp-server
# SMTP_USERNAME=your-production-email
# SMTP_PASSWORD=your-production-email-password

# Production AI service key
# OPENAI_API_KEY=your-production-openai-key

# ============================================
# Feature Flags (Optional)
# ============================================
# Enable experimental features
FEATURE_REAL_TIME_CHAT=False
FEATURE_ANALYTICS=False
FEATURE_EXPORT_DATA=False
